@model Mtuci.Models.TestViewModel

<h1>Create page</h1>

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header"></div>
            <div class="card-body">
                <form asp-controller="Test" asp-action="CreateTest" method="post">
                    <div class="mb-3">
                        <label class="form-label">Your Name</label>
                        <input asp-for="Name" class="form-control" type="text" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Your Age</label>
                        <input asp-for="Age" class="form-control" type="number" />
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
